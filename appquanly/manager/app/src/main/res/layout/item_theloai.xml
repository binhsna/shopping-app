<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_category"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_my_profile"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/define_dimen_120"
                android:layout_height="@dimen/define_dimen_80" />

            <TextView
                android:id="@+id/tv_category_name"
                app:layout_constraintTop_toBottomOf="@id/image_category"
                app:layout_constraintStart_toStartOf="@id/image_category"
                app:layout_constraintEnd_toEndOf="@id/image_category"
                android:text="ten"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>